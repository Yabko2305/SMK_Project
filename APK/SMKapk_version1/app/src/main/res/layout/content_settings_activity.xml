<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/mainScrollview"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Settings_activity"
    tools:showIn="@layout/settings_toolbar_layout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#b6bbc4"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/usericon1"
            android:layout_width="75dp"
            android:layout_height="70dp"

            android:layout_below="@+id/NameShowScrollActivity"
            android:layout_alignEnd="@+id/NameShowScrollActivity"
            android:layout_marginStart="8dp"
            android:layout_marginTop="372dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/usericons1" />

        <ImageView
            android:id="@+id/usericon2"
            android:layout_width="75dp"
            android:layout_height="70dp"

            android:layout_below="@+id/NameShowScrollActivity"
            android:layout_alignEnd="@+id/NameShowScrollActivity"
            android:layout_marginStart="8dp"
            android:layout_marginTop="292dp"
            android:layout_marginEnd="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/usericons2" />

        <ImageView
            android:id="@+id/usericon4"
            android:layout_width="75dp"
            android:layout_height="70dp"

            android:layout_below="@+id/NameShowScrollActivity"
            android:layout_alignEnd="@+id/NameShowScrollActivity"

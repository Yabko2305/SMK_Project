<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/mainScrollview"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Settings_activity"
    tools:showIn="@layout/settings_toolbar_layout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#b6bbc4"
        android:id = "@+id/mainConstraintOfSettings"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="423dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white_background_with_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/ChangeUserImageButton"
                android:layout_width="396dp"
                android:layout_height="44dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:text="Change User Icon"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#064dce"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/changeUserImageLayout"
            android:layout_width="382dp"
            android:layout_height="232dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/white_background_with_border"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/usericon1"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.026"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons1" />

            <ImageView
                android:id="@+id/usericon2"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="112dp"
                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.026"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons2" />

            <ImageView
                android:id="@+id/usericon4"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="112dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.638"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons4" />

            <ImageView
                android:id="@+id/usericon5"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginTop="112dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.342"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons5" />

            <ImageView
                android:id="@+id/usericon6"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.969"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons6" />

            <ImageView
                android:id="@+id/usericon7"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="112dp"
                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.969"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons7" />

            <ImageView
                android:id="@+id/usericon8"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.656"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons8" />

            <ImageView
                android:id="@+id/usericon9"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/NameShowScrollActivity"
                android:layout_alignEnd="@+id/NameShowScrollActivity"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usericons9" />

            <TextView
                android:id="@+id/ApplyChangeImage"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="196dp"
                android:text="Apply"
                android:textColor="#064dce"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CancelChangeImage"
                android:layout_width="98dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="196dp"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textColor="#064dce"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ApplyChangeImage"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>>

        <android.support.constraint.ConstraintLayout
            android:layout_width="416dp"
            android:layout_height="58dp"
            android:layout_marginTop="660dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white_background_with_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/logOut"
                android:layout_width="391dp"
                android:layout_height="41dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Exit"
                android:textAlignment="textStart"
                android:textColor="#064dce"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>